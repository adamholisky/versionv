{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "RunNG",
			"type": "shell",
			"command": "make run_ng",
			"isBackground": false,
			"options": {
				"cwd": "/usr/local/osdev/versions/v"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"group": "kbuild",
				"showReuseMessage": false,
				"clear": false
			},
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": ["$gcc"],
		},
		{
			"label": "Make",
			"type": "shell",
			"command": "make",
			"isBackground": false,
			"options": {
				"cwd": "/usr/local/osdev/versions/v"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"group": "kbuild",
				"showReuseMessage": false,
				"clear": false
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative", "/usr/local/osdev/versions/v/"
                ]
            },
		},
		{
			"label": "Clean",
			"type": "shell",
			"command": "make clean",
			"isBackground": false,
			"options": {
				"cwd": "/usr/local/osdev/versions/v"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"group": "kbuild",
				"showReuseMessage": false,
				"clear": false
			},
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "DebugNG",
			"type": "shell",
			"isBackground": true,
			"command": "make run_ng_debug",
			"options": {
				"cwd": "/usr/local/osdev/versions/v"
			},
			"presentation": {
				"panel": "shared",
				"reveal": "always",
				"focus": true
			},
			"group": {
				"kind": "build",
				"isDefault": false
			}
		}
	]
}
